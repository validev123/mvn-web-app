pipeline {
    agent any
    tools 
      {
       maven "maven3.9.11"
     } 
    stages {
        stage('git-checkout') {
            steps
              {
              notifyBuild('STARTED')
              git branch: 'development', url: 'https://github.com/validev123/mvn-web-app.git'
                
            } // git step ending
        } // git-checkout stage ending

    stage('maven build') {
      steps
        {
         sh "mvn clean package"
        }
      } //maven stage ending
     stage ('SQ report') 
        {
       steps
          {
          sh "mvn sonar:sonar"
        }
      } // SQ ending
     stage('nexus upload') 
         {
        steps
           {
          sh "mvn deploy"
        }
        
      } // nexus ending
   

     stage('Deploy to Tomcat')
         {
       steps
        {
        echo "Deploying WAR file using curl..."

          sh """
          curl -u sai:password \
          --upload-file /var/lib/jenkins/workspace/jio-dev-scriptedway-PL/target/maven-web-application.war \
          "http://16.112.12.97/manager/text/deploy?path=/maven-web-application&update=true"
          """
     }
  } // tomcat ending
   } // stages ending

post {
  success {
    notifyBuild(currentBuild.result)
  }
  failure {
notifyBuild(currentBuild.result)
      }
}
}//pipeline closing


def notifyBuild(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESS') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary, channel: '#prod')
}
